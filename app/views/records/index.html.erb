<!--月を入れる予定-->

<div th:replace="book/search"></div>
  <div class="container-fluid">
    <div th:text="${deleteError}"></div>
    <div th:if="${@tasks}">
      <div th:if="${@tasks.size() == 0}">履歴がありません</div>
      <div th:if="${@tasks.size() > 0}">
        <table class="table table-striped">
          <thead class="thead-dark">
            <tr><th>誰？</th><th>タスク</th><th>ポイント</th><th>日時</th></tr>
          </thead>
          <tbody>
          <%= @tasks.each do |task| %>
            <tr>
              <%= link_to family_task_path(task) do %>
                <td><%= task.user.name %></td><td><%= task.title %></td><td><%= task.points %></td><td><%= task.created_at %></td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>