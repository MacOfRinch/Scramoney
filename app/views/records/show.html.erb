<!--記録一覧から遷移し、削除機能へのリンクをつける-->
<div class="container-fluid">
  <%= render partial: 'shared/show_task', locals: { task: @task } %>
  <div class="center-block">
    <ul>
    <li>
      <p><%= "カウント：#{}" %></p>
    </li>
    </ul>
    <% if @user == current_user %>
      <%= button_to '削除する', controller: :task_users, action: :destroy %>
    <% end %>
  </div>
</div>