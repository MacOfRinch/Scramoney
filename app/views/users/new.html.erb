<div class="container">
  <div class="row">
    <div class="col-6 col-offset-3">
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <% @user.errors.full_messages.each do |message| %>
            <%= message %><br>
          <% end %>
        </div>
      <% end %>
      <h1>あなたについて教えてください</h1>
      <%= form_with model: @user, url: family_users_path, local: true do |f| %>
        <%= render "form", { user: @user, f: f } %>
      <% end %>
    </div>
  </div>
</div>
